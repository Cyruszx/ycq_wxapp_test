/* components/identifyingCode.wxss */

.backDiv{
  width: calc(100vw - 0rpx);
  height: calc(100vh - 0rpx);
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}
.divCont{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index:10001;
}
.topTitle{
  height:80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid #e5e5e5;
}
.topTitle text{
  display: block;
  color: #353535;
  font-size: 28rpx;
  height: 80rpx;
  line-height:80rpx;
  text-align: center;
}
.topTitle text:nth-child(2){
  position: absolute;
  top: 0;
  right: 24rpx;
  width: 70rpx;
  height: 80rpx;
  line-height:80rpx;
  text-align: right;
}
.centerCont{
  padding: 0 24rpx;
  margin-bottom: 30rpx;
}
.centerRow{
  display: flex;
  margin-top: 40rpx;
}
.centerRow text{
  display: block;
  color: #666;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.centerRow input{
  display: block;
  background-color: #f2f2f2;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #888;
  font-size: 28rpx;
  text-align: center;
}
.bottomButton button{
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 0;
  background-color: #ef4631;
  color: #fff;
  font-size: 30rpx;
  z-index: 999999;
}
.smscode{
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  border-left: 1rpx solid #e5e5e5;
  padding: 0 15rpx;
}
.smscode text{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  font-size: 24rpx;
  margin: 0;
}