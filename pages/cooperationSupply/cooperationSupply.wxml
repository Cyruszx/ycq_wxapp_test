<!--pages/cooperationSupply/cooperationSupply.wxml-->
<view class="switchTitle">
    <view class="titleItem {{activeId ==0 ? 'activeItem':''}}" data-id="0" bindtap='switchTitle'>
       <text>合作价值</text>
    </view>
    <view class="titleItem {{activeId == 1 ? 'activeItem':''}}" data-id="1"  bindtap='switchTitle'>
       <text>合作成果</text>
    </view>
    <view class="titleItem {{activeId == 2 ? 'activeItem':''}}" data-id="2"  bindtap='switchTitle'>
       <text>合作意向申请</text>
    </view>
</view>

<!--店铺信息-->
<view class=" shopArea">
   <view class="content">
       <view class="formRow">
           <view class="formInfo">
               <text>*</text>
               <text>店铺名称</text>
           </view>
           <view class="formInput">
               <input type='text' placeholder-class='placeholder' placeholder="请输入店铺名称 " value="{{form.shopName}}"  bindinput="nameInput" ></input>
           </view>
       </view>

       <view class="formRow">
           <view class="formInfo">
               <text>*</text>
               <text>店铺所在地</text>
           </view>
           <view class="formInput">
               <picker
                mode="region"
                bindchange="shopRegionChange"
                value="{{form.shopRegion}}"
              >
                <view class="picker">
                   <text>{{form.shopRegion ? form.shopRegion: '请选择店铺所在地'}}</text>
                </view>
              </picker>
           </view>
       </view>

       <view class="formRow">
           <view class="formInfo">
               <text>*</text>
               <text>店铺详细地址</text>
           </view>
           <view class="formInput">
               <input type='text' placeholder-class='placeholder' placeholder="请输入店铺详细地址" value="{{form.shopRegionDetail}}"  bindinput='regionDetailInput'></input>
           </view>
       </view>

       <view class="formRow">
           <view class="formInfo">
               <text>*</text>
               <text>联系电话</text>
           </view>
           <view class="formInput">
               <input type='text' placeholder-class='placeholder' placeholder="请输入您的联系电话" value="{{form.shopTel}}" bindinput='telInput'></input>
           </view>
       </view>

       <view class="formBlock">
          <view class="formRow">
              <view class="formInfo">
                  <text>*</text>
                  <text>店铺介绍</text>
              </view>
          </view>
          <view class="rowTextArea">
             <textarea value="{{form.context}}" bindinput="contextInput"></textarea>
          </view>
      </view>
   </view>
</view>

<!--经营信息-->
<view class="regionTitle">
    <text>经营信息</text>
</view>
<view class="operateArea">
   <view class="content">
      <view class="formRow">
           <view class="formInfo">
               <text>*</text>
               <text>经营年限</text>
           </view>
           <view class="formInput">
               <input type='text' placeholder-class='placeholder' placeholder="如：一年以下"></input>
           </view>
      </view>

      <view class="formBlock">
          <view class="formRow">
              <view class="formInfo">
                  <text>*</text>
                  <text>主营品牌车系</text>
              </view>
              <text class="infoTip">(没有符合的品牌可以自行添加)</text>
          </view>
          <view class="brandArea">
               <block wx:for="{{brandList}}">
                   <text class="{{item.check? 'checkBrand':''}}" bindtap='chooseBrand' data-index="{{index}}">{{item.name}}</text>
               </block>
               <text style="font-size:40rpx;padding:0 40rpx;color:#ef4631;">+</text>
          </view>
      </view>

      <view class="formBlock">
          <view class="formRow">
              <view class="formInfo">
                  <text>*</text>
                  <text>邀请码</text>
              </view>
          </view>
          <view class="rowInput">
             <input type='text'></input>
          </view>
      </view>

      <view class="formBlock">
          <view class="formRow">
              <view class="formInfo">
                  <text>*</text>
                  <text>绑定银行卡</text>
              </view>
          </view>
          <view class="rowInput">
             <input type='text'></input>
          </view>
          <view class="rowInput">
              <input type='text'></input>
              <view class="smscode" wx-if="{{sentSms}}" style="color:#eee;">
                <text>{{dtNUm}}已获取</text><text></text>
              </view>
              <view class="smscode" bindtap='get_sms_code'  wx-if="{{!sentSms}}">
                <text>获取验证码</text>
              </view>
          </view>
      </view>

      <view class="formBlock">
          <view class="formRow">
              <view class="formInfo" style="width:100%;">
                  <text>*</text>
                  <text>上传身份证（正反面）</text>
              </view>
          </view>
          <view class="uploadId">
              <view class="uploadLeft" bindtap='uploadId'>
                   <text>+</text>
              </view>
              <view class='uploadRight'>
                   <view class="uploadRightItem">
                       <image src='{{idCardSrc[0]}}'></image>
                   </view>
                   <view class="uploadRightItem">
                       <image src='{{idCardSrc[1]}}'></image>
                   </view>
              </view>
          </view>
      </view>

      <view class="formBlock">
          <view class="formRow">
              <view class="formInfo">
                  <text>*</text>
                  <text>上传营业执照</text>
              </view>
          </view>
          <view class="uploadRegion">
              <view class="uploadLeft" bindtap='uploadRegion'>
                   <text>+</text>
              </view>
              <view class='uploadRight'>
                   <image src='{{regionSrc}}'></image>  
              </view>
          </view>
      </view>
   </view>
</view>

<!--选择合伙人级别-->
<view class="regionTitle">
    <text>选择合伙人级别</text>
</view>
<view class="partnerArea">
    <view class='content'>
        <checkbox-group bindchange="checkboxChange">
          <label class="partnerItem" wx:for="{{partnerList}}">
            <checkbox value="{{item.name}}" checked="{{item.checked}}" />
              <text>{{item.value}}</text>
          </label>
        </checkbox-group>
    </view>
</view>

<view class='formButtom'>
    <button form-type='submit'>支付</button>
</view>