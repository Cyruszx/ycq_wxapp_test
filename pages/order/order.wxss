page{
  background-color: #f7f7f8;
}
.switchTitle{
  display: flex;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.titleItem{
  flex: 1;
  box-sizing: border-box;
  padding: 0 24rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.titleItem text{
  font-size:32rpx;
  color:#353535;
  display: block;
  text-align: center;
  height:86rpx;
  line-height: 86rpx;
  border-bottom: 4rpx solid #fff;
}
.activeItem text{
  font-size:32rpx;
  color:#ef4631;
  border-bottom: 4rpx solid #ef4631;
}
.orderList{
  padding: 20rpx 24rpx;
}
.orderItem{
  background-color: #fff;
  padding: 30rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.orderInfo{
  display: flex;
  align-items: center;
}
.infoImg{
  width: 75rpx;
  height: 75rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.infoImg image{
  width: 100%;
  height: 100%;
}
.infoName{
  margin-right: auto;
}
.infoName text{
  font-size: 34rpx;
  color: #000;
}

.infoPrice text{
  font-size: 26rpx;
  color: #ef4631;
}
.orderDomainBg{
  padding-left: 95rpx;
  
}
.orderDomain{
  display: flex;
  padding-top: 34rpx;
  margin-top: 10rpx;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #f2f2f2;
}
.orderSchedule text{
  display: inline-block;
  height: 43rpx;
  line-height: 43rpx;
  padding: 0 8rpx;
  border-radius: 8rpx;
  border: 1px solid #b2b2b2;
  color: #b2b2b2;
  font-size: 24rpx;
  margin-right: 30rpx;
  position: relative;
  float: left;
}
.orderSchedule text::after{
  content: "";
  width: 30rpx;
  height: 1px;
  background-color: #b2b2b2;
  position: absolute;
  top: 21rpx;
  right: -31rpx;
}
.orderSchedule text:last-child{
  margin-right: 0;
}
.orderSchedule text:last-child::after{
  height: 0;
}
.orderSchedule text.activeSche{
  background-color: #ef4631;
  border: 1px solid #ef4631;
  color: #fff;
}
.orderSchedule text.activeSche::after{
  background-color: #ef4631;
}
.orderHandle{
  display: flex;
  align-content: flex-end;
}
.orderHandle text{
  display: inline-block;
  height: 43rpx;
  line-height: 43rpx;
  padding: 0 8rpx;
  border-radius: 8rpx;
  border: 1px solid #b2b2b2;
  color: #b2b2b2;
  font-size: 24rpx;
  margin-right: 30rpx;
}
.orderHandle text:last-child{
   margin-right: 0;
   border: 1px solid #ef4631;
   background-color:#ef4631;
   color: #fff;
}