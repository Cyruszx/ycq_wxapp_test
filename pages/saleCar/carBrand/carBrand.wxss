/* pages/saleCar/carBrand/carBrand.wxss */
page{
  background-color: #fff;
  height: 100%;
  position : relative; 
}
.src{
  position: relative;
  height: 100%;
}
.initial{
  width:100%;
  height:60rpx;
  background-color: rgb(241, 241, 241);
  font-size: 14px;
  color:#666;
  line-height: 60rpx;
  padding-left:30rpx;
}
.carName{
  width:90%;
  margin:0 auto;
  height:90rpx;
  border-bottom: 1rpx solid #e4e4e4;
  font-size: 14px;
  line-height: 90rpx;
}
.wrap view:last-child{
  border-bottom:none;
}

.marker{
  width:4rpx;
  height:24rpx;
  background-color: #ef4631;
  display: inline-block;
}

/* 右边锚点区域 */
.anchor-wrap{
  width:60rpx;
  /* height:80%; */
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx #ccc;
  z-index: 99;
  position: fixed;
  top:70rpx;
  right:30rpx;
  border-radius: 30rpx;
  padding:10rpx 0rpx;
}
.anchor{
  width:100%;
  height:3%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  padding:6rpx 0rpx;
  color:#666;
}

/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.7;
}
 
.modalDlg{
    width: 500rpx;
    height: 620rpx;
    position: fixed;
    top: 50%;
    left: 5%;
    z-index: 99;
    margin: -370rpx 85rpx;
    background-color: #fff;
    border-radius: 8rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 具体车型区域 */
.carList-wrap{
  width:524rpx;
  height:100%;
  background-color: #fff;
  z-index: 9999;
  position: absolute;
  top:0rpx;
  right:-524rpx;
}
.carList{
  width:80%;
  height:80rpx;
  font-size: 14px;
  margin: 0 auto;
  line-height: 80rpx;
  border-bottom: 1rpx solid #e4e4e4;
}
.carBrand_icon{
  width:100rpx;
  height:286rpx;
  position: absolute;
  right:0%;
  top:40%;
  z-index: 9999;
}