/* pages/saleCar/saleCar.wxss */
.uploadImgArea{
  padding: 30rpx 24rpx;
  overflow: hidden;
  border-bottom: 20rpx solid #f7f7f7;
}
.addIcon{
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #e5e5e5;
  background-color: #f0f0f0;
  text-align: center;
  line-height: 200rpx;
  margin-right: 20rpx;
  display: inline-block;
  float: left;
  margin-bottom: 20rpx;
} 
.addIcon text{
  font-size: 100rpx;
  color: #666;
}
.imgItem{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border: 1px solid #e5e5e5;
  display: inline-block;
  float: left;
   margin-bottom: 20rpx;
   position: relative;
}
image.imageIcon{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -15rpx;
  right: -15rpx;
}
.imgArea{
   width: 100%;
   height: 100%;
   overflow: hidden;
}
.imgArea image{
  width: 100%;
}


.uploadTips{
  clear: both;
}
.uploadTips text{
  font-size: 24rpx;
  color: #ef4631;
}
.formArea{
  padding-bottom: 140rpx;
}
.formItem{
  display: flex;
  padding: 0 24rpx;
  height: 95rpx;
  align-items: center;
  border-bottom: 1rpx solid #e5e5e5;
  position: relative;
  flex-wrap:wrap;
}
.itemLeft{
  width: 200rpx; 
  height: 95rpx;
  line-height: 95rpx; 
}
.itemLeft text:nth-child(1){
  color: #ef4631;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.itemLeft text:nth-child(2){
  font-size: 30rpx;
}
/* 车辆备注样式 */
.carDis{ 
  margin-left: 8rpx;
}
.itemCont .beizhu{
  padding-left: 28rpx;
}
.beizhuBuyPage{
  padding-left: 16rpx;
}
.itemRight{
  width: 500rpx;
  display: flex;
  justify-content:flex-end;
  text-align: right;
}
.itemCont{
  width: 400rpx;
  height:95rpx;
}
.itemCont picker{
  width: 100%;
  height: 95rpx;
}
.itemCont input{
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  font-size: 24rpx;
  color: #666;
  padding-left: 20rpx;
}
/* 排量输入框样式 */
.itemCont-displacement{
  width: 500rpx;
  height:95rpx;
  display: flex;
  justify-content: space-between;
}
.itemCont-displacement .displacement{
  width:40%;
  height: 95rpx;
  line-height: 95rpx;
  font-size: 24rpx;
  color: #666;
  padding-left: 20rpx;
}
.radio-group{
  display: flex;
}
.itemCont-displacement .radio{
  line-height: 95rpx;
  font-size: 28rpx;
  padding-left: 40rpx;
}
.itemCont-displacement .radio radio{
  transform:scale(0.7);
}
.itemCont text{
 font-size: 28rpx;
  color: #666;
  display: inline-block;
  height: 95rpx;
  line-height: 95rpx;
}
.picker{
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  text-align: right;
}
.picker text{
  font-size: 26rpx;
  color: #666;
}
text.formTip{
  font-size: 24rpx;
  line-height: 95rpx;
  color: #ef4631;
  padding-left: 20rpx;
}
.tipLog{
  display: inline-block;
  background-color: #666;
  padding: 0 12rpx;
  border-radius: 5rpx;
  position: absolute;
  top: -10rpx;
  right: 70rpx;
}
.tipLog text{
  display: block;
  color: #fff;
  font-size: 22rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.formButton{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ef4631;
  color: #fff;
  border-radius: 0;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
  z-index: 9999;
}
.formButton1{
  width: 96%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ef4631;
  color: #fff;
  border-radius: 4px;
  font-size: 30rpx;
 /* margin-top:60rpx; */
}
.note{
  margin-bottom: 20px;
}
.formItem:last-child{
  height: auto;
}
 

.formItem:last-child .itemRight{
  width: 100%;
}
.formItem:last-child .itemRight .itemCont{
  width: 100%;
}
.formItem:last-child input{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: left;
}
.formItem:last-child textarea{
  width: 100%;
  font-size: 28rpx;
  color: #666;
  text-align: left;
}

.backDiv{
  width: calc(100vw - 0rpx);
  height: calc(100vh - 0rpx);
  background: rgba(0, 0, 0, 0.7);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
}
.divCont{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index:10001;
}
.topTitle{
  height:80rpx;
  line-height: 80rpx;
  position: relative;
  border-bottom: 1px solid #e5e5e5;
}
.topTitle text{
  display: block;
  color: #353535;
  font-size: 28rpx;
  height: 80rpx;
  line-height:80rpx;
  text-align: center;
}
.topTitle text:nth-child(2){
  position: absolute;
  top: 0;
  right: 24rpx;
  width: 70rpx;
  height: 80rpx;
  line-height:80rpx;
  text-align: right;
}
.centerCont{
  padding: 0 24rpx;
  margin-bottom: 30rpx;
}
.centerRow{
  display: flex;
  margin-top: 40rpx;
}
.centerRow text{
  display: block;
  color: #666;
  font-size: 28rpx;
  margin: 20rpx 0;
}
.centerRow input{
  display: block;
  background-color: #f2f2f2;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #888;
  font-size: 28rpx;
  text-align: center;
}
.bottomButton button{
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 0;
  background-color: #ef4631;
  color: #fff;
  font-size: 30rpx;
}

.smscode{
  width: 140rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  border-left: 1rpx solid #e5e5e5;
  padding: 0 15rpx;
}
.smscode text{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  font-size: 24rpx;
  margin: 0;
}