<!--pages/saleCar/saleCar.wxml-->
<form report-submit="{{true}}" bindsubmit='formSubmit'>
<view class='uploadImgArea'>
    <view class='addIcon' bindtap='chooseImg'>
        <text>+</text>
    </view>
    <block wx:for="{{imgList}}">
       <view class='imgItem'>
         <view class="imgArea">
           <image src='{{appImgUrl+item}}' mode='widthFix' bindtap='previewImage'></image>
         </view>
         <image class="imageIcon"src='../../images/delete.png' bindtap="deleteImg" data-index="{{index}}"></image>
       </view>  
    </block>
    <view class="uploadTips">
      <text>*至少上传3张以上车辆照片，横屏拍摄，第一张作为封面展示</text>
    </view>
</view>

<view class="formArea">
    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车型名称</text>
        </view>
        <view class="itemRight">
            <view class="itemCont"> 
               <!-- <view mode="multiSelector" value="{{multiIndex}}" bindcolumnchange="bindPickerColumnChange" bindchange="bindPickerChange" range="{{brandInfo}}" range-key="{{'name'}}"> -->
               <view bindtap='selectCar'>
            <view class="picker">
              <!-- <text>{{brand.id ? brand.name :'请选择车型'}}</text> -->
              <text>{{carType}}</text>
            </view>
          </view>
            </view>
            
        </view>
    </view>

    <!-- <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车辆配置</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
                <input value='{{form.carType}}' bindinput='typeInput' placeholder='格式如：2017款1.6L手动豪华'></input>
            </view>
            <text class="formTip" bindtap='formTip'>提示</text>
        </view>
        <view class="tipLog" wx:if="{{formTipShow}}">
          <text>2017款1.6L手动豪华</text>
        </view>
    </view> -->

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车辆所在地</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <picker
                mode="region"
                bindchange="carRegionChange"
                value="{{form.carRegion}}"
                custom-item="{{customItem}}"
              >
                <view class="picker">
                   <text>{{form.carRegion}}</text>
                </view>
              </picker>
            </view>
            <!--<text class="formTip">提示</text>-->
        </view>
    </view>
    
    <!-- <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车牌所在地</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <picker
                mode="region"
                bindchange="listingRegionChange"
                value="{{form.listingRegion}}"
                custom-item="{{customItem}}"
              >
                <view class="picker">
                   <text>{{form.listingRegion}}</text>
                </view>
              </picker>
            </view> -->
            <!--<text class="formTip">提示</text>-->
        <!-- </view>
    </view> -->

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车辆批发价</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
              <input value="{{form.price}}" type='digit' placeholder='价格不得低于1000' bindinput='priceInput'></input>
            </view>
            <text class="formTip" style="color:#353535;">元</text>
        </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>输入排量</text>
        </view>

            <view class="itemRight">
              <view class="itemCont-displacement">
                <input class="displacement" 
                value='{{form.displacement}}' 
                bindinput='displacementInput' 
                type="digit" 
                placeholder='格式如：1.6'></input>
                <radio-group class="radio-group" bindchange="radioChange">
                    <label class="radio" wx:for="{{radioArray}}">
                      <radio value="{{item.name}}" checked="{{item.checked}}">{{item.name}}</radio>
                    </label>
                </radio-group>
            </view>
            </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>变速箱类型</text>
        </view>
        <picker  class="itemRight"
                 value="{{form.transmissionData}}"
                 bindchange="transmissionDataChange"
                 range="{{transmission}}"
                 mode="selector"
        >
            <view class="itemCont">
                <!-- <input value='{{form.carDisplacement}}' bindinput='typeInput'></input> -->
                <text>{{form.transmissionData}}</text>
            </view>
        </picker>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车辆年份</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <picker
                  mode="date"
                  value="{{form.productDate}}"
                  start="2005-01-01"
                  end="{{year}}"
                  bindchange="productDateChange"
                  fields="year"
                >
                  <view class="picker">
                     <text>{{form.productDate}}</text>
                  </view>
                </picker>
            </view>
            <!--<text class="formTip">提示</text>-->
        </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>上牌日期</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <picker
                  mode="date"
                  value="{{form.listingDate}}"
                  start="2009-09-01"
                  bindchange="listingDateChange"
                  fields="month"
                >
                  <view class="picker">
                     <text>{{form.listingDate}}</text>
                  </view>
                </picker>
            </view>
            <!--<text class="formTip">提示</text>-->
        </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>行驶里程</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <input value="{{form.distance}}" type='digit' bindinput='distanceInput'></input>
            </view>
            <text class="formTip" style="color:#353535;">公里</text>
        </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>过户次数</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
              <input value="{{form.emission}}" type='idcard' bindinput='emissionInput'></input>
            </view>
            <text class="formTip" style="color:#353535;">次</text>
        </view>
    </view>

    <view class='formItem' bindtap='openLog'>
        <view class="itemLeft">
           <text>*</text>
           <text>联系电话</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <text>{{phone}}</text>
            </view>
            
        </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text></text>
           <text class="carDis">车况描述</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
                <input placeholder="请如实描述车况，否则描述不准确将影响您的诚信" value="{{form.description}}" bindinput="descriptionInput" class="beizhu"> </input>
            </view>
          
        </view>
    </view>
</view>

   <button class="formButton" form-type='submit'>发布车源</button>
</form>

