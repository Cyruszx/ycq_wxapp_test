.inviteList {
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 30rpx;
}

.itemImg {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 20rpx;
  float: left;
  margin-right: 30rpx;
}

.itemImg image {
  width: 100%;
  height: 100%;
}

.itemInfo {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #f2f2f2;
}

.itemInfo text {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.itemInfo text:nth-child(1) {
  width: 160rpx;
}

.itemInfo text:nth-child(2) {
  width: 200rpx;
}

.itemInfo text:nth-child(2) {
  width: 200rpx;
}

.inviteItem:last-child .itemInfo {
  border-bottom: none;
}


/* 提现记录 */
.record-wrap{
  width:100%;
  height:1000rpx;
  box-sizing: border-box;
}
.record-wrap .record{
  width:100%;
  height:150rpx;
  background-color: #fff;
  display: flex;
}
.record-wrap .icon{
  width:20%;
  height:100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.record-wrap .icon image{
  width:80%;
}
.record-wrap .content-wrap{
  width:80%;
  height:100%;
  display: flex;
  align-items: center;
}
.record-wrap .content-wrap .content{
  width:100%;
  height:70%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding:20rpx 10rpx;
  position: relative; 
}
.recordMonry{
  display: flex;
  justify-content: space-between;
}
.recordMonry text{
  font-size: 32rpx;
}
.recordTime{
  font-size: 28rpx;
  color:rgb(203, 203, 203);
}
.recordState{
  font-size: 38rpx;
  color:green;
  position: absolute;
  bottom:10rpx;
  right:10rpx;
}

