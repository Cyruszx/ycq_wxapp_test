/* pages/mine/news/news.wxss */
page{
  background-color: rgb(247, 247, 247);
  padding-bottom: 40rpx;
}
.news-wrap{
  width:100%;
}
.news-time{
  width: 100%;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  color:#ccc;
  font-size: 28rpx;
}
.news-content{
  width:85%;
  background-color: #fff;
  margin:0 auto;
  padding:40rpx 20rpx;
  box-shadow: 0rpx 4rpx 20rpx #ccc;
  border-radius: 8rpx;
}
.news-title{
  width:100%;
  font-size: 34rpx;
  font-weight: bold;
  color:#000;
  padding-bottom: 20rpx;
}
.news{
  width:100%;
  font-size: 32rpx;
  line-height: 1.5;
}