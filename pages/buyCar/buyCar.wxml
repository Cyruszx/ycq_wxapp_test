<import src="/utils/template/template.wxml" />


<form report-submit="{{true}}" bindsubmit='formSubmit'>
<view class="formArea">
    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>意向品牌</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <view bindtap='selectCar'>
            <view class="picker">
              <text>{{carType}}</text>
            </view>
          </view>
            </view>
            
        </view>
    </view>

