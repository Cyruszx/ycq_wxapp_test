    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>车辆年份</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <picker
                  mode="date"
                  value="{{form.productDate}}"
                  start="2005-01-01"
                  end="{{year}}"
                  bindchange="productDateChange"
                  fields="year"
                >
                  <view class="picker">
                     <text>{{form.productDate}}</text>
                  </view>
                </picker>
            </view>
            <!--<text class="formTip">提示</text>-->
        </view>
    </view>


    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>输入排量</text>
        </view>
        <view class="itemRight">
              <view class="itemCont-displacement">
                <input class="displacement" 
                value='{{form.displacement}}' 
                bindinput='displacementInput' 
                type="digit" 
                placeholder='格式如：1.6'></input>
                <radio-group class="radio-group" bindchange="radioChange">
                    <label class="radio" wx:for="{{radioArray}}">
                      <radio value="{{item.name}}" checked="{{item.checked}}">{{item.name}}</radio>
                    </label>
                </radio-group>
            </view>
            </view>
    </view>

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>变速箱类型</text>
        </view>
        <picker  class="itemRight"
                 value="{{form.transmissionData}}"
                 bindchange="transmissionDataChange"
                 range="{{transmission}}"
                 mode="selector"
        >
            <view class="itemCont">
                <text>{{form.transmissionData}}</text>
            </view>
        </picker>
    </view>


    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>意向城市</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <picker
                mode="region"
                bindchange="carRegionChange"
                value="{{form.carRegion}}"
                custom-item="{{customItem}}"
              >
                <view class="picker">
                   <text>{{form.carRegion}}</text>
                </view>
              </picker>
            </view>
            <!--<text class="formTip">提示</text>-->
        </view>
    </view>
    
    

    <view class='formItem'>
        <view class="itemLeft">
           <text>*</text>
           <text>心里价</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
              <input value="{{form.price}}" type='digit' bindinput='priceInput'></input>
            </view>
            <text class="formTip" style="color:#353535;">元</text>
        </view>
    </view>
  
    
    <view class='formItem' bindtap='openLog'>
        <view class="itemLeft">
           <text>*</text>
           <text>联系电话</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
               <text>{{form.phone}}</text>
            </view>
            
        </view>
    </view>

    <view class='formItem note'>
        <view class="itemLeft">
           <text></text>
           <text class="beizhuBuyPage">备注</text>
        </view>
        <view class="itemRight">
            <view class="itemCont">
                <input value="{{form.description}}" bindinput='descriptionInput'></input>
            </view>
          
        </view>
    </view>
    <button class="formButton1" form-type='submit'>发布</button>
</view>

   
</form>

