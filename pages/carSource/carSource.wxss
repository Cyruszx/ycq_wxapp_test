/* pages/carSource/carSource.wxss */

.selectArea{
  padding: 0 24rpx;
  border-top: 1rpx solid #f3f3f3;
}
.selectList{
  display: flex;
  height: 90rpx;
  align-items: center;
  border-bottom: 1rpx solid #f3f3f3;
}

.selectItem{
  flex: 1;
  display: flex;
  justify-content: center;
  height:35rpx;
  align-items: center;
  border-right: 1px solid #e5e5e5;
}
.selectItem:last-child{
  border-right: none;
}
.selectItem text{
  font-size: 30rpx;
  color: #353535;
  margin-right: 20rpx;
}
.selectItem image{
  width: 15rpx;
  height: 16rpx;
}
.picker{
  display: flex;
  align-items: center;
}
.picker text{
  font-size: 30rpx;
  color: #353535;
  margin-right: 20rpx;
}
.carInfoList{
  padding: 0 24rpx;
}
.carInfoItem{
   overflow: hidden;
   padding: 30rpx 0;
   display: flex;
}
.carInfoItem:nth-child(1){
  border-top: 1px solid #f3f3f3;
}
.carImg{
  width: 256rpx;
  height: 167rpx;
  flex-basis:256rpx;
  position: relative;
}
.imgArea{
  width: 256rpx;
  height: 167rpx;
  overflow: hidden;
}
.carImg .typeTip{
  display:inline-block;
  padding: 0 20rpx;
  background-color: #1E9FFF;
  color: #fff;
  height: 35rpx;
  line-height:35rpx;
  font-size: 22rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  border-radius: 7rpx;
}
.carImg .typeTipBuy{
  display:inline-block;
  padding: 0 20rpx;
  background-color: #FF5722;
  color: #fff;
  height: 35rpx;
  line-height:35rpx;
  font-size: 22rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  border-radius: 7rpx;
}
.carImg image{
  width:100%;
  height: 100%;
}
.carInfoCont{
  width: 444rpx;
  padding-left: 28rpx;
  box-sizing: border-box;
  
}
.carInfoContWord{
  width: 100%;
  height: 167rpx;
  display: flex;
  flex-direction:column;
  justify-content:space-between;
}
.carInfoContLine{
  width: 100%;
  height: 1px;
  border-bottom: 1px dashed #e5e5e5;
  margin-top: 20rpx;
}
.carName {
  overflow: hidden;
  word-break:break-all;
  word-wrap:break-word;
  width: 100%;
}
.carName text{
  font-size: 30rpx;
  color: #353535;
  float: left;
  font-weight: bold;
}
.carInfoRow1 {
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.carInfoRow1 text{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 26rpx;
  color: #888;
  float: left;
}
.carInfoRow2{
  overflow: hidden;
  width: 100%;
  height: 30rpx;
  display: flex;
  align-items: center;
 
  
}
.carInfoRow2 text{
  flex: 1;
  text-align: right;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  justify-content:flex-end;
  color: #b2b2b2;
  float: left;
}
.carInfoRow2 text:nth-child(1){
  font-size: 28rpx;
  color: #ff0000;
  font-weight: bold;
  margin-right: 100rpx;
  flex: 1;
  text-align: left;
  align-items: center;
  display:inline-block;
  height: 35rpx;
  line-height:35rpx;
  position: absolute;
  border-radius: 7rpx;
}