/* pages/index/searchPage/searchPage.wxss */

page{
  background-color: #f2f2f2;
}
.search-wrap{
  width:100%;
  display: flex;
  align-items: center;
  position: relative;
  background-color: #fff;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.search-wrap image{
  width:35rpx;
  height:35rpx;
  position: absolute;
  left:50rpx;
  top:17rpx;
}
.search{
  border:1rpx solid rgba(204, 204, 204, 0.4);
  width:500rpx;
  height:60rpx;
  background-color: #f2f2f2;
  margin-left:30rpx;
  padding-left:40px;
  font-size: 12px;
  color:#000;
  border-radius: 50rpx;
}
.close{
  font-size: 12px;
  position: absolute;
  right:165rpx;
  top:15rpx;
  color:#666;
  z-index: 999;
}
.cancel{
  font-size: 16px;
  color:#666;
  margin-left:30rpx;
}

/* 搜索结果列表-买车 */
.searchList-wrap{
  width:100%;
  background-color: #fff;
}
.searchList-wrap .carList{
  width:710rpx;
  border-top: 1rpx solid #f2f2f2;
  margin-left:40rpx;
  color:#000;
  font-size: 14px;
  height:80rpx;
  display: flex;
  align-items: center;
}
.carList image{
  width:30rpx;
  height:30rpx;
  padding-right:15rpx;
}
.name{
  width:100%;
  /* text-align: center; */
  color:#000;
  font-size: 14px;
  height:80rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
  padding-left:40rpx;
}
.name image{
  width:30rpx;
  height:30rpx;
  padding-right:15rpx;
}


/* 搜索结果列表-卖车 */
.searchListSell-wrap{
  width:100%;
  background-color: #fff;
}
.searchListSell-wrap .carListSell{
  width:710rpx;
  border-top: 1rpx solid #f2f2f2;
  margin-left:40rpx;
  color:#000;
  font-size: 14px;
  height:80rpx;
  display: flex;
  align-items: center;
}
.carListSell image{
  width:30rpx;
  height:30rpx;
  padding-right:15rpx;
}
.sellName{
  width:100%;
  text-align: center;
  color:#000;
  font-size: 14px;
  height:80rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
  padding-left: 40rpx;
}
.sellName image{
  width:30rpx;
  height:30rpx;
  padding-right:15rpx;
}

/* 搜索记录 */

.searchHistory-wrap{
  width:100%;
  background-color: #fff;
  margin-top:20rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.searchHistory-title{
  display: flex;
  justify-content: space-between;
  width:670rpx;
  margin:0 auto;
  color:#000;
  font-size: 12px;
  padding-top:20rpx;
  padding-right: 20rpx;
}
.searchHistory{
  font-weight: bold;
}
.searchHistory image{
  width:25rpx;
  height:25rpx;
  padding-left: 4rpx;
  margin-right:4rpx;
}
.searchHistoryContent{
  width:100%;
  padding:20rpx;
  font-size: 14px;
}
.searchName{
  background-color: rgb(253, 239, 239);
  width:198rpx;
  padding:10rpx;
  border-radius: 20rpx;
  margin:10rpx 10rpx;
  display: inline-block;
  text-overflow : ellipsis;
  overflow: hidden;
  white-space:nowrap;
  position: relative;
  color:rgb(183, 65, 75);
  text-align: center;
}


/* 暂无数据页面 */
.noData{
  /* width:100%; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:20rpx;
  position: relative;
}
.noData image{
  display: block;
  width: 290rpx;
  margin-top:30%;
}
.noData .data{
  color:#000;
  font-size: 12px;
  position: absolute;
  left:50%;
  bottom:0rpx;
}
.data{
  /* width:100%; */
  text-align: center;
  font-size: 14px;
  color:#ccc;
  margin-top:20rpx;
}
